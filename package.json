{
  "name": "esbuild-plugin-emit-decorator-metadata",
  "version": "0.1.0",
  "description": "Plugin for esbuild to support emitDecoratorMetadata",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && node ./scripts/write-cjs-package.cjs",
    "test": "jest -c jest.config.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YevheniiYusenkov/esbuild-plugin-emit-decorator-metadata.git"
  },
  "keywords": [
    "emitDecoratorMetadata",
    "plugin",
    "esbuild"
  ],
  "peerDependencies": {
    "esbuild": "^0.14.29 || ^0.15.0 || ^0.16.0 || ^0.17.0 || ^0.18.0 || ^0.19.0 || ^0.20.0 || ^0.21.0 || ^0.22.0 || ^0.23.0 || ^0.24.0 || ^0.25.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "tslib": "^2.3.1",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
